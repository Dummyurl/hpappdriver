<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ride.happyy.driver.activity.HomeActivity">

  <!--  <include layout="@layout/layout_actionbar_title"/> -->

<LinearLayout
    android:id="@+id/id2"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/gray_light">
    <ride.happyy.driver.widgets.CustomTextView
        android:background="@color/white"
        android:id="@+id/status_txv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online"
        android:textColor="@color/green"
        android:gravity="center"
        android:padding="2dp"
        android:textSize="25dp"/>
</LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/papper_view_height"
        android:paddingBottom="0dp"></android.support.v4.view.ViewPager>


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:minHeight="?actionBarSize"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:layout_marginBottom="0dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp" />

</LinearLayout>
